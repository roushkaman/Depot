<%= form_tag do %>
		<fieldset>
			<legend>Автаризируйтесь, пожалуйсто</legend>

			<div>
				<%= label_tag :name, 'Имя:'%>
				<%= text_field_tag :name, params[:name] %>
			</div>

			<div>
				<%= label_tag :password, 'Пароль:' %>
				<%= password_field_tag :password, params[:password] %>
			</div>

			<div>
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
	<% end %>